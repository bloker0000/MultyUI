        function MultyLibrary:get_config()
            local Config = {}
            
            for _, v in next, flags do
                if type(v) == "table" and v.key then
                    Config[_] = {active = v.active, mode = v.mode, key = tostring(v.key)}
                elseif type(v) == "table" and v["Transparency"] and v["Color"] then
                    Config[_] = {Transparency = v["Transparency"], Color = v["Color"]:ToHex()}
                else
                    Config[_] = v
                end
            end 
            
            return http_service:JSONEncode(Config)
        end

        function MultyLibrary:load_config(config_json) 
            local config = http_service:JSONDecode(config_json)
            
            for _, v in config do 
                if _ ~= "config_name_list" then
                    local function_set = MultyLibrary.config_flags[_]

                    if function_set then 
                        if type(v) == "table" and v["Transparency"] and v["Color"] then
                            function_set(hex(v["Color"]), v["Transparency"])
                        elseif type(v) == "table" and v["active"] then 
                            function_set(v)
                        else
                            function_set(v)
                        end
                    end 
                end
            end 
        end 
        
        function MultyLibrary:round(number, float) 
            local multiplier = 1 / (float or 1)

            return floor(number * multiplier + 0.5) / multiplier
        end 

        function MultyLibrary:apply_theme(instance, theme, property) 
            insert(themes.utility[theme][property], instance)
        end

        function MultyLibrary:update_theme(theme, color)
            for _, property in themes.utility[theme] do 

                for m, object in property do 
                    if object[_] == themes.preset[theme] then 
                        object[_] = color 
                    end 
                end 
            end 

            themes.preset[theme] = color 
        end 

        function MultyLibrary:connection(signal, callback)
            local connection = signal:Connect(callback)
            
            insert(MultyLibrary.connections, connection)

            return connection 
        end

        function MultyLibrary:close_element(new_path) 
            local open_element = MultyLibrary.current_open

            if open_element and new_path ~= open_element then
                open_element.set_visible(false)
                open_element.open = false;
            end 

            if new_path ~= open_element then 
                MultyLibrary.current_open = new_path or nil;
            end
        end 

        function MultyLibrary:create(instance, options)
            local ins = Instance.new(instance) 
            
            for prop, value in options do 
                ins[prop] = value
            end
            
            return ins 
        end

        function MultyLibrary:unload_menu() 
